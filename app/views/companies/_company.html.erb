<tr id="company-<%= company.id %>">
  <td><%= index_for index, @companies.current_page,
    Settings.per_page %></td>
  <td><%= company.name %></td>
  <td><%= company.address %></td>
  <td align="center">
    <%= link_to edit_company_path(company) do %>
      Edit
      <i class="fa fa-pencil" aria-hidden="true"></i>
    <% end %>
  </td>
</tr>
